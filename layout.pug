doctype
html
  head
    title Vineria
    link(rel="stylesheet" href="css/fonts.css")
    link(rel="stylesheet" href="css/ka.css")
    link(rel="stylesheet" href="css/materialize.min.css")
    link(rel="stylesheet" href="css/animate.css")
    link(rel="stylesheet" href="css/main.css")
  body
    #modal1.modal
      .modal-header თქვენი შეკვეთა
      .modal-content
        .close(onclick="$('#modal1').modal('close')")
        form
          div
            -for (var i = 0; i < 3; i++)
              div.item
                .img
                  img(src="images/bottle.png")
                .cont
                  h2 მწვანე ქისი
                  .manufacturer თელავის ღვინის მარანი
                  input(type="button" value="-" class="dec")
                  input(type="text" data-price=(45/2) value="2" class="count")
                  input(type="button" value="+" class="enc")
                  span.price 45.00 <span class="gel">A</span>
            .sum ჯამი: <span id="sum">#{45*3}.00</span> <span class="gel">A</span> <img src="images/bottleicon.png"> სულ: <span id="count">6</span> ბოთლი
          div
            .details
              h2 შეკვეთის დეტალები
              input(type="text" placeholder="თბილისი, მისამართი")
              input(type="text" placeholder="ტელეფონის ნომერი")
              input(type="text" placeholder="სახელი, გვარი")
              input(type="text" placeholder="მიტანის დრო")
              h2 გადახდა
              .pay
                input(type="radio" name="pay" checked id="real")
                label(for="real") ნაღდი
                input(type="radio" name="pay" id="bycard")
                label(for="bycard") ბარათით
                div რა თანხა გექნებათ ხელზე?
                  input(type="text")
              p ადგილზე მიტანის სერვისი მუშაობს ყოველდღე 20:00-02:00 (თბილისის მასშტაბით)
            input(type="submit" value="შეკვეთა")
    .header
      .wrapper
        .top
          .langs ვა:
            ul
              li.active
                a(href="") ქა
              li
                a(href="") EN
              li
                a(href="") ру
          a.logo(href="index.html")
            img(src="images/logo.png")
          .basket
            a(href="#modal1" class="modal-trigger") კალათა <img src="images/carticon.png"> <span>0</span>
        ul.menubar
          -var menu = [{title: 'ღვინის მაღაზია', href: 'vineshop.html'},{title: 'საკონფერენციო დარბაზი', href: 'textpage.html'},{title: 'შეთავაზებები', href: ''},{title: 'ღონისძიებები', href: 'events.html'},{title: 'გალერეა', href: ''},{title: 'კონტაქტი', href: ''}];
            each menuitem, index in menu
              li(class=(index == 3) ? 'active' : '')
                a(href=menuitem.href)=menuitem.title
    block content
    
    .footer 
      .wrapper ვინერია &copy; 2017
    
    script(src="js/jquery-3.2.1.min.js")
    script(src="js/materialize.min.js")
    script(src="js/main.js")
    script.
      var map;
        function initMap() {
          map = new google.maps.Map(document.getElementById('map'), {
            center: {lat: 41.718352, lng: 44.7437663},
            zoom: 14,
            disableDefaultUI: true
          });
          var marker = new google.maps.Marker({
            position: {lat: 41.718352, lng: 44.7437663},
            map: map,
            icon: "images/marker.png"
          });

        }

    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAakmwZTjhAbhFV_CGj3uXAsaD6127iGsE&callback=initMap" async defer)
